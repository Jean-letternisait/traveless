@page "/find-flights"
@inject Group_project_2.Manager.FlightManager FlightManager

<h3>Find Flights</h3>

<div>
    <label>Origin Airport:</label>
    <input @bind="origin" placeholder="e.g. YYZ" />

    <label>Destination Airport:</label>
    <input @bind="destination" placeholder="e.g. LAX" />

    <label>Day of Week:</label>
    <input @bind="day" placeholder="e.g. Monday" />

    <button @onclick="SearchFlights">Search</button>
</div>

@if (hasSearched && (flights == null || flights.Count == 0))
{
    <p>No matching flights found.</p>
}
else if (flights?.Count > 0)
{
    <h4>Matching Flights</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Flight Code</th>
                <th>Airline</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Day</th>
                <th>Time</th>
                <th>Cost</th>
                <th>Seats Available</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in flights)
            {
                <tr>
                    <td>@flight.FlightCode</td>
                    <td>@flight.Airline</td>
                    <td>@flight.Origin</td>
                    <td>@flight.Destination</td>
                    <td>@flight.Day</td>
                    <td>@flight.Time</td>
                    <td>@flight.Cost.ToString("C")</td>
                    <td>@flight.Seats</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string origin = "";
    private string destination = "";
    private string day = "";
    private List<Group_project_2.Models.Flight> flights = new();
    private bool hasSearched = false;

    private void SearchFlights()
    {
        hasSearched = false;
        flights = FlightManager.FindFlights(origin, destination, day);
        hasSearched = true;
    }
}
